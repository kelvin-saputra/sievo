generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// DROP SYSTEM SCHEMA MODEL
model User {
  id           String    @id @default(uuid())
  name         String
  phone_number String
  email        String    @unique
  password     String
  role         ROLE      @default(FREELANCE)
  is_active    Boolean   @default(true)
  is_admin     Boolean   @default(false)
  started_at   DateTime  @default(now())
  ended_at     DateTime?
  task         Task[]
  event        Event[]
}

model Inventory {
  inventory_id       String             @id @default(uuid())
  item_name          String
  item_qty           Int
  item_price         Float
  inventory_photo    String[]
  category           InventoryCategory  @default(CONSUMABLE)
  is_avail           Boolean            @default(true)
  description        String?
  created_by         String
  updated_by         String?
  created_at         DateTime           @default(now())
  updated_at         DateTime           @updatedAt
  actual_budget_item ActualBudgetItem[]
  budget_plan_item   BudgetPlanItem[]
  is_deleted         Boolean            @default(false)
  inventory_log      InventoryLog[]
}

model InventoryLog {
  inventory_log_id String    @id @default(uuid())
  updated_by       String
  updated_at       DateTime  @default(now())
  action           String
  inventory_id     String
  inventory        Inventory @relation(fields: [inventory_id], references: [inventory_id])
}

model Task {
  task_id     String     @id @default(uuid())
  title       String
  description String?
  assigned_id String?
  assigned    User?      @relation(fields: [assigned_id], references: [id])
  due_date    DateTime?
  status      TaskStatus @default(PENDING)
  created_by  String
  updated_by  String?
  created_at  DateTime   @default(now())
  updated_at  DateTime   @updatedAt
  event_id    String
  event       Event      @relation(fields: [event_id], references: [event_id])
  is_deleted  Boolean    @default(false)
}

model Contact {
  contact_id   String   @id @default(uuid())
  name         String
  email        String
  phone_number String
  description  String?
  created_by   String
  updated_by   String?
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
  vendor       Vendor?
  client       Client?
  is_deleted   Boolean  @default(false)
}

model Vendor {
  vendor_id         String          @id @default(uuid())
  contact_id        String          @unique
  rating            Float?          @default(0) //TODO: Derived from Vendor Service
  bankAccountDetail String //TODO: MultiValued 
  contact           Contact         @relation(fields: [contact_id], references: [contact_id])
  vendor_service    VendorService[]
  is_deleted        Boolean         @default(false)
}

model VendorService {
  service_id         String                @id @default(uuid())
  service_name       String
  category           VendorServiceCategory @default(OTHERS)
  price              Float
  rating             Float
  description        String?
  vendor_id          String
  vendor             Vendor                @relation(fields: [vendor_id], references: [vendor_id])
  actual_budget_item ActualBudgetItem[]
  budget_plan_item   BudgetPlanItem[]
  is_deleted         Boolean               @default(false)
}

model Client {
  client_id  String     @id @default(uuid())
  contact_id String     @unique
  contact    Contact    @relation(fields: [contact_id], references: [contact_id])
  type       ClientType @default(INDIVIDUAL)
  event      Event[]
  is_deleted Boolean    @default(false)
}

model Budget {
  budget_id   String               @id @default(uuid())
  status      BudgetStatus         @default(PENDING)
  created_by  String
  updated_by  String?
  created_at  DateTime             @default(now())
  updated_at  DateTime             @updatedAt
  event_id    String
  event       Event                @relation(fields: [event_id], references: [event_id])
  plan_item   BudgetPlanItem[]
  actual_item ActualBudgetItem[]
  categories  BudgetItemCategory[]
  is_deleted  Boolean              @default(false)
  is_actual   Boolean              @default(false)
}

model BudgetPlanItem {
  budget_item_id    String              @id @default(uuid())
  item_qty          Int
  item_subtotal     Float
  category_id       Int
  category          BudgetItemCategory? @relation(fields: [category_id], references: [category_id])
  budget_id         String?
  budget            Budget?             @relation(fields: [budget_id], references: [budget_id])
  vendor_service_id String?
  vendor_service    VendorService?      @relation(fields: [vendor_service_id], references: [service_id])
  inventory_id      String?
  inventory         Inventory?          @relation(fields: [inventory_id], references: [inventory_id])
  other_item_id     String?
  other_item        Purchasing?         @relation(fields: [other_item_id], references: [other_item_id])
  is_deleted        Boolean             @default(false)
}

model ActualBudgetItem {
  actual_budget_item_id String             @id @default(uuid())
  item_qty              Int
  item_subtotal         Float
  category_id           Int
  category              BudgetItemCategory @relation(fields: [category_id], references: [category_id])
  notes                 String?
  invoice_photo         String[]
  status                BudgetItemStatus   @default(PENDING)
  budget_id             String?
  budget                Budget?            @relation(fields: [budget_id], references: [budget_id])
  vendor_service_id     String?
  vendor_service        VendorService?     @relation(fields: [vendor_service_id], references: [service_id])
  inventory_id          String?
  inventory             Inventory?         @relation(fields: [inventory_id], references: [inventory_id])
  other_item_id         String?
  other_item            Purchasing?        @relation(fields: [other_item_id], references: [other_item_id])
  is_deleted            Boolean            @default(false)
}

model BudgetItemCategory {
  category_id        Int                @id @default(autoincrement())
  category_name      String
  actual_budget_item ActualBudgetItem[]
  budget_plan_item   BudgetPlanItem[]
  budget             Budget[]
  is_deleted         Boolean            @default(false)
}

model Purchasing {
  other_item_id      String             @id @default(uuid())
  item_name          String
  item_price         Float
  description        String?
  created_by         String
  updated_by         String?
  created_at         DateTime           @default(now())
  updated_at         DateTime           @updatedAt
  actual_budget_item ActualBudgetItem[]
  budget_plan_item   BudgetPlanItem[]
  is_deleted         Boolean            @default(false)
}

model Proposal {
  proposal_id   String         @id @default(uuid())
  proposal_name String
  proposal_link String
  status        ProposalStatus @default(DRAFT)
  client_name   String         @unique
  created_by    String
  updated_by    String?
  created_at    DateTime       @default(now())
  updated_at    DateTime       @updatedAt
  is_deleted    Boolean        @default(false)
}

model Report {
  report_id         String   @id @default(uuid())
  review            String
  description       String
  actualParticipant Int
  created_by        String
  updated_by        String?
  created_at        DateTime @default(now())
  updated_at        DateTime @updatedAt
  event_id          String   @unique
  event             Event    @relation(fields: [event_id], references: [event_id])
  is_deleted        Boolean  @default(false)
}

model Event {
  event_id         String      @id @default(uuid())
  event_name       String
  location         String
  start_date       DateTime
  end_date         DateTime
  notes            String?
  participant_plan Int
  status           EventStatus @default(PLANNING)
  budget           Budget[]
  manager_id       String
  manager          User        @relation(fields: [manager_id], references: [id])
  report           Report?
  task             Task[]
  client_id        String
  client           Client      @relation(fields: [client_id], references: [client_id])
  is_deleted       Boolean     @default(false)
  updated_at       DateTime    @updatedAt
  updated_by       String?
  created_at       DateTime    @default(now())
  created_by       String
}

enum ROLE {
  EXECUTIVE
  INTERNAL
  FREELANCE
}

enum TaskStatus {
  PENDING
  ON_PROGRESS
  DONE
  CANCELLED
}

enum BudgetItemStatus {
  PENDING
  DONE
  CANCELED
}

enum BudgetStatus {
  PENDING
  APPROVED
  REJECTED
}

enum EventStatus {
  PLANNING
  BUDGETING
  PREPARATION
  IMPLEMENTATION
  REPORTING
  DONE
}

enum ProposalStatus {
  DRAFT
  ON_REVIEW
  APPROVED
  REJECTED
  ON_CONTACT
  ACCEPTED
  CANCELLED
}

enum InventoryCategory {
  CONSUMABLE
  NON_CONSUMABLE
}

enum VendorServiceCategory {
  FOOD_AND_BEVERAGES
  DECORATION
  DOCUMENTATION
  ACCOMODATION
  ENTERTAINMENT
  TRANSPORTATION
  OTHERS
}

enum ClientType {
  INDIVIDUAL
  ORGANIZATION
}
